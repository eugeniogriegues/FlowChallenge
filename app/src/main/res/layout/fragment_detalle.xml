<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="8dp"
    android:id="@+id/fragmento_detalle_layout"
    tools:context="view.DetalleNuevo"
    android:background="@color/cardview_dark_background"
    >


    <TextView
        android:id="@+id/fragment_detail_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:textColor="#18EC20"
        android:textSize="35sp"
        android:textStyle="italic"
        tools:text="RICKY MORTY" />

    <TextView
        android:id="@+id/fragment_detail_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:textColor="#F10757"
        android:textSize="35sp"
        android:textStyle="italic"
        tools:text="1" />


    <ImageView
        android:id="@+id/fragment_detail_imagen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fragment_detail_nombre"

        android:layout_centerInParent="true"
        android:contentDescription="@string/contentDescription"
        android:scaleType="centerCrop"
        tools:src="@drawable/ejemplo" />




</RelativeLayout>